{
  "name": "habit-tracker-app",
  "version": "1.0.0",
  "description": "A simple habit tracker application built with TypeScript and Express.",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd habit-tracker-frontend && npm install && npm run build",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node backend/src/server.ts",
    "dev:react": "cd habit-tracker-frontend && npm start",
    "install:all": "npm install && cd habit-tracker-frontend && npm install",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:frontend": "cd habit-tracker-frontend && npm test",
    "deploy:render": "npm run build && npm run start:prod",
    "deploy:azure": "npm run build && npm run start:prod",
    "build:azure": "npm run build:backend && npm run build:frontend && npm run copy:frontend",
    "copy:frontend": "cp -r habit-tracker-frontend/build/* dist/public/ || xcopy habit-tracker-frontend\\build\\* dist\\public\\ /e /i /y",
    "postinstall": "npm run build:backend"
  },
  "dependencies": {
    "@azure/identity": "^4.10.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@mui/system": "^7.1.1",
    "@mui/types": "^7.4.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "agent-base": "^6.0.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "author": "SkydioFlyer",
  "license": "MIT",
  "keywords": [],
  "engines": {
    "node": "20"
  },
  "resolutions": {
    "@mui/types": "7.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "http-proxy-middleware": "^3.0.5"
  }
}
