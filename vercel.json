{
  "version": 2,
  "name": "habit-tracker-app",
  "builds": [
    {
      "src": "habit-tracker-frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://habit-tracker-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/habit-tracker-frontend/build/$1"
    },
    {
      "src": "/",
      "dest": "/habit-tracker-frontend/build/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://habit-tracker-backend.onrender.com/api"
  }
}
