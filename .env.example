# Environment variables template - Copy to .env and fill in your values
PORT=5000
NODE_ENV=development

# Data source: 'mock' for development, 'sharepoint' for production
DATA_CLIENT=mock

# SharePoint environment variables (for production)
SHAREPOINT_TENANT_ID=your-tenant-id-here
SHAREPOINT_CLIENT_ID=your-client-id-here
SHAREPOINT_CLIENT_SECRET=your-client-secret-here
SHAREPOINT_SITE_ID=your-site-id-here
SHAREPOINT_LIST_ID=your-list-id-here
SHAREPOINT_USERS_LIST_ID=your-users-list-id-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000
